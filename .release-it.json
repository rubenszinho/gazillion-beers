{
  "git": {
    "commitMessage": "chore(release): ${version} [skip ci]",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "Release ${tagName}",
    "draft": true,
    "assets": ["dist/*.js", "dist/*.css", "dist/*.html"]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "angular"
    }
  }
}
